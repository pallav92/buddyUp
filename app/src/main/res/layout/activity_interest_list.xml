<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">


<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:rowCount="3"
    android:layout_gravity="center"
    android:columnCount="3">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_row="0"
        android:onClick="onClickOFInterest"
        android:id="@+id/food"
        android:elevation="3dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"

        android:layout_column="0">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/pets"/>

    <TextView

        android:text="Food"
        android:id="@+id/tvInterest"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_row="0"
        android:id="@+id/books"
        android:padding="10dp"
        android:onClick="onClickOFInterest"

        android:gravity="center"

        android:layout_column="1"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/books"/>

        <TextView

            android:text="Books"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_row="0"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/Bollywood"
        android:onClick="onClickOFInterest"

        android:layout_column="2"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/movies"/>

        <TextView

            android:text="Movies"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_row="1"
        android:id="@+id/Travel"
        android:padding="10dp"
        android:onClick="onClickOFInterest"
        android:gravity="center"
        android:layout_column="0"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/travel"/>

        <TextView

            android:text="Travel"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_row="1"
        android:id="@+id/politics"
        android:gravity="center"
        android:padding="10dp"
        android:onClick="onClickOFInterest"

        android:layout_column="1"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/politics"/>

        <TextView

            android:text="Politics"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_row="1"
        android:padding="10dp"
        android:id="@+id/OutDoor"
        android:gravity="center"
        android:onClick="onClickOFInterest"
        android:layout_column="2"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/pets"/>

        <TextView

            android:text="Pets"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
    android:layout_row="2"
    android:padding="10dp"
        android:onClick="onClickOFInterest"
        android:id="@+id/Health"
        android:gravity="center"

    android:layout_column="0"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/health"/>

    <TextView

        android:text="Health"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
    android:layout_row="2"
        android:id="@+id/event"
    android:padding="10dp"
        android:onClick="onClickOFInterest"
        android:gravity="center"

    android:layout_column="1"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/events"/>

    <TextView

        android:text="Event"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_row="2"
        android:padding="10dp"
        android:onClick="onClickOFInterest"
        android:id="@+id/adventure"
        android:layout_column="2"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/outdoor"/>

        <TextView

            android:text="Adventure"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>

</GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Just Make Freinds"
        android:layout_margin="10dp"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_margin="10dp"
        android:onClick="onClickOfSubmit"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>
</LinearLayout>
</ScrollView>